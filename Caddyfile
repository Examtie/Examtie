:5000 {
  # API routes
  handle_path /api/* {
    reverse_proxy backend:9765
  }

  # Swagger /openapi.json and docs
  handle /openapi.json {
    reverse_proxy backend:9765
  }
  handle /docs* {
    reverse_proxy backend:9765
  }

  handle_path /storage/* {
    reverse_proxy minio:9000
  }

  handle {
    reverse_proxy frontend:3000
  }

  handle /auth/* {
    reverse_proxy backend:9765
  }
}
